{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build gcd",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "mkdir -p \"${workspaceFolder}/code_pack/build/Debug\" && gcc -g \"${workspaceFolder}/code_pack/gcd.c\" -o \"${workspaceFolder}/code_pack/build/Debug/outDebug\""
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                ""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}