{
    // Minimal build task for gcc (builds code_pack/gcd.c)
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build gcd",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "mkdir -p \"${workspaceFolder}/code_pack/build/Debug\" && gcc -g \"${workspaceFolder}/code_pack/gcd.c\" -o \"${workspaceFolder}/code_pack/build/Debug/outDebug\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
